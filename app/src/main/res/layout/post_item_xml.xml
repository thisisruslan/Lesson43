<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:id="@+id/postItemID"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:padding="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/postDescriptionID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="10sp"
        android:text="sadasdasdas"
        app:layout_constraintTop_toBottomOf="@id/postItemID"
        app:layout_constraintStart_toStartOf="@id/postItemID"
        app:layout_constraintEnd_toEndOf="@id/postItemID"
        />

</androidx.constraintlayout.widget.ConstraintLayout>